<resources>
    <style name="Widget.Theme.Housebook.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    <style name="JustifiedText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>
    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="losange">
        <item name="cornerSizeTopRight">37dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">37dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="message">
        <item name="cornerSizeTopRight">37dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">37dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
</resources>